@model TasteFood.Entites.PartialSlider
@{
    ViewBag.Title = "CreatePartialSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="text-center">
    <h2>Yeni Slider Oluştur</h2>
</div>

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Slider Ekleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Slider</li>
            <li class="breadcrumb-item active" aria-current="page">Slider İşlemeleri</li>
        </ol>
    </div>





    <form method="post">
        <label>Slider Başlığı</label>
        </br>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        <label>Slider Alt Başlığı</label>
        </br>
        @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
        <label>Slider Açıklaması</label>
        </br>
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
        <label>Slider image url</label>
        </br>
        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
        </br>
        <button class="btn btn-info" type="submit">Submit</button>
        <a href="/PartialSlider/PartialSliderList/" class="btn btn-outline-warning">Geriye dön</a>
    </form>


</div>



