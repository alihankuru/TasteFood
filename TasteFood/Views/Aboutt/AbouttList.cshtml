@model List<TasteFood.Entites.Aboutt>
@{
    ViewBag.Title = "AbouttList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>About 2 Sayfası</h2>

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">About2</li>
            <li class="breadcrumb-item active" aria-current="page">Abouts2</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    @*<h6 class="m-0 font-weight-bold text-primary">Simple Tables</h6>*@
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>About ID</th>
                                <th>Title</th>
                                <th>Title2</th>

                                <th>ImageUrl</th>
                                <th>ImageUrl2</th>

                                <th>Açıklama</th>
                                <th>Sil</th>

                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@item.AbouttId</td>

                                    <td>@item.Title</td>
                                    <td>@item.Title2</td>
                                    <td><img src="@item.ImageUrl" style="height:50px;width:50px;" class="rounded mx-auto d-block" alt="@item.ImageUrl"></td>
                                    <td><img src="@item.ImageUrl2" style="height:50px;width:50px;" class="rounded mx-auto d-block" alt="@item.ImageUrl2"></td>
                                    <td>@item.Description</td>


                                    <td><a href="/Aboutt/DeleteAboutt/@item.AbouttId" class="btn btn-sm btn-primary">Sil</a></td>
                                    <td><a href="/Aboutt/UpdateAboutt/@item.AbouttId" class="btn btn-sm btn-primary">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <td><a href="/Aboutt/CreateAboutt/" class="btn btn-sm btn-primary">Yeni About2 Girişi</a></td>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <!--Row-->


</div>

