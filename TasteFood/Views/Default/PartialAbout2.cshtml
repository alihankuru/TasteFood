@model List<TasteFood.Entites.Aboutt>
<section class="ftco-section ftco-no-pt ftco-no-pb">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="row d-flex">

                <div class="col-md-6 d-flex">

                    <div class="img img-2 w-100 mr-md-2" style="background-image: url(@item.ImageUrl);"></div>
                    <div class="img img-2 w-100 ml-md-2" style="background-image: url(@item.ImageUrl2);"></div>
                </div>
                <div class="col-md-6 ftco-animate makereservation p-4 p-md-5">
                    <div class="heading-section ftco-animate mb-5">
                        <span class="subheading">@item.Title</span>
                        <h2 class="mb-4">@item.Title2</h2>
                        <p>
                           @item.Description
                        </p>
                        <p><a href="#" class="btn btn-primary">Daha fazla</a></p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
