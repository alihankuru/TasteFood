@model List<TasteFood.Entites.About>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımızda Sayfası</h2>

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Hakkımızda</li>
            <li class="breadcrumb-item active" aria-current="page">Hakkımızda</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
             
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>About ID</th>
                                <th>Title</th>
                                <th>ImageUrl</th>
                                <th>Açıklama</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@item.AboutId</td>
                                    <td>@item.Title</td>
                                    <td><img src="@item.ImageUrl" style="height:50px;width:50px;" class="rounded mx-auto d-block" alt="@item.ImageUrl"></td>
                                    <td>@item.Description</td>


                                    <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-sm btn-primary">Sil</a></td>
                                    <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-sm btn-primary">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <!--Row-->


</div>


